---
title: "Resident Directory"
layout: layouts/base.njk
---

<div x-data="{ residents: []}" x-init="residents = (await (await fetch('/api/residents')).json()).residents">
	<table>
		<thead>
			<tr>
				<th>Name</th>
				<th>Email</th>
				<th>Phone</th>
				<th>Address</th>
				<th>Lot</th>
			</tr>
		</thead>
		<tbody>
			<template x-for="resident in residents">
				<tr>
					<td>
						<span x-text="resident.first_name"></span>&nbsp;
						<span x-text="resident.last_name"></span>
					</td>
					<td>
						<a x-bind:href="resident['e-mail']" x-text="resident['e-mail']"></a>
					</td>
					<td>
						<span x-text="resident.fcr_address"></span>
					</td>
					<td>
						<span x-text="resident.lot"></span>
					</td>
				</tr>
			</template>
		</tbody>
	</table>
</div>


